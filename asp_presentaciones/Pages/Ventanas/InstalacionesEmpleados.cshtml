@page
@model asp_presentacion.Pages.Ventanas.InstalacionesEmpleadosModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            <div align="center">
                <h2>Instalaciones y empleados</h2>
            </div>

            <div align="center"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.IdInstalaciones" />
                <input type="hidden"
                       asp-for="@Model.Actual!.IdEmpleados" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Id de la Instalacion asociada
                            </label>
                            <div class="col-lg-6">
                                <input id="nmIdInstalaciones"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.IdInstalaciones" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Id del Empleado asociado
                            </label>
                            <div class="col-lg-6">
                                <input id="nmIdEmpleados"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.IdEmpleados" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes2.cshtml");
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>
                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                Direccion de la Instalacion asociada : @Model.Actual!._IdInstalaciones!.Direccion
                            </h6>
                            <h6 align="left">
                                Nombre del Empleado asociado : @Model.Actual!._IdEmpleados!.Nombre
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="filtros-container">
                <h3>Filtros</h3>
                <h6>Direccion de la instalacion asociada</h6>
                    <input id="fl_IdInstalacionesDireccion"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!._IdInstalaciones!.Direccion"
                           placeholder="Direccion" />
                <br />
                <h6>Nombre del empleado asociado</h6>
                <input id="fl_IdEmpleadosNombre"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!._IdEmpleados!.Nombre"
                       placeholder="Nombre" />
                </div>
                <br />
                
                <div class="tabla-container">
                <h1 align="left">Tabla de informacion</h1>
                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                    Id de la Instalacion Asociada
                            </th>
                            <th>
                                    Direccion de la Instalacion Asociada
                            </th>
                            <th>
                                    Id del Empleado Asociado
                            </th>
                            <th>
                                    Nombre del Empleado Asociado
                            </th>
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                            @elemento.IdInstalaciones
                                    </td>
                                    <td>
                                            @elemento._IdInstalaciones!.Direccion
                                    </td>
                                    <td>
                                            @elemento.IdEmpleados
                                    </td>
                                    <td>
                                            @elemento._IdEmpleados!.Nombre
                                    </td>
                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
                </div>
            }
        </form>
    </div>
</center>
