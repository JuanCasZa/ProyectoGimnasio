@page
@model asp_presentacion.Pages.Ventanas.ProveedoresModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            <div align="center">
                <h2>Proveedores</h2>
            </div>

            <div align="center"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.NombreEntidad" />
                <input type="hidden"
                       asp-for="@Model.Actual!.ValorTotalVenta" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Direccion" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Telefono" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre de la entidad proveedora
                            </label>
                            <div class="col-lg-6">
                                <input id="nmNombreEntidad"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.NombreEntidad" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Valor Total de Venta
                            </label>
                            <div class="col-lg-6">
                                <input id="nmValorTotalVenta"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.ValorTotalVenta" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Direccion
                            </label>
                            <div class="col-lg-6">
                                <input id="nmDireccion"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Direccion" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Telefono
                            </label>
                            <div class="col-lg-6">
                                <input id="nmTelefono"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Telefono" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes2.cshtml");
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>
                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.NombreEntidad
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="filtros-container">
                <h3>Filtros</h3>
                    <h6>Direccion</h6>
                    <input id="flDireccion"
                       class="cts_forms form-control"
                           asp-for="@Model.Filtro!.Direccion"
                           placeholder="Direccion" />
                <br />
                    <h6>Telefono</h6>
                    <input id="flTelefono"
                       class="cts_forms form-control"
                           asp-for="@Model.Filtro!.Telefono"
                           placeholder="Telefono" />
                <br />
                </div>
                <br />
                <div class="tabla-container">
                <h1 align="left">Tabla de informacion</h1>
                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                    Nombre de la Entidad proveedora
                            </th>
                            <th>
                                    Valor Total de Venta
                            </th>
                            <th>
                                    Direccion
                            </th>
                            <th>
                                    Telefono
                            </th>
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                            @elemento.NombreEntidad
                                    </td>
                                    <td>
                                            @elemento.ValorTotalVenta
                                    </td>
                                    <td>
                                            @elemento.Direccion
                                    </td>
                                    <td>
                                            @elemento.Telefono
                                    </td>
                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
                </div>
            }
        </form>
    </div>
</center>
